<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragmentosclass"
    android:background="@drawable/walpaper">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:text="Where to find us : "
            android:textSize="20sp"
            android:textColor="#73D7F0"
            android:id="@+id/juduls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
<com.google.android.gms.maps.MapView
    android:layout_below="@id/juduls"
    android:layout_width="match_parent"
    android:layout_height="500px"
    android:id="@+id/map"
    android:layout_centerHorizontal="true"
    android:layout_margin="20dp"
    />
        <TextView
            android:textColor="#AEAEAE"
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat                                : Jl Nuri no 49 Palembang"
            android:layout_below="@id/map"
            />
        <ImageView
            android:id="@+id/gambare"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_below="@id/alamat"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/john"
            />
        <TextView

            android:textColor="#AEAEAE"
            android:id="@+id/customer"
            android:layout_below="@id/gambare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Service           : John Kinton"
    />
        <TextView
            android:textColor="#AEAEAE"
            android:id="@+id/notelp"
            android:layout_below="@id/customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon               :  08137125896 "
            />
        <TextView
            android:textColor="#AEAEAE"
            android:id="@+id/email"
            android:layout_below="@id/notelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail                                :  wahyuramadhan5@yahoo.co.id "
            />
        <TextView
            android:id="@+id/tanggapan"
            android:layout_below="@id/email"
            android:textColor="#AEAEAE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback : "
            />
        <EditText
            android:hint="Tulis disini..."
            android:background="#BEBEBE"
  android:layout_below="@id/tanggapan"
            android:textSize="11sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/teksbok"
            android:layout_width="225dp"
            android:layout_height="150dp"
/>
        <Button
            android:background="#BEBEBE"
            android:textColor="#dae9f6"
            android:id="@+id/butons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teksbok"
            android:text="Send"
            />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
